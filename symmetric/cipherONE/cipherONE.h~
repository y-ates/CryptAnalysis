#ifndef _cipherONE_H
#define _cipherONE_H

#include <iostream>

class cipherONE{
private:
	const static char* version;
	const static char SBox[];

	
	const static int k_cnt = 2;
	char k[k_cnt];

	char* getKey();
	
public:
	static int get_k_cnt();
	static int get_version();
	char getSBox(int index);
	char encrypt(char m, char k[k_cnt]);
	char decrypt(char c, char k[k_cnt]);
	void setKey(char* k_new);
	void usage(char* programname);
	void error_handler(char* programname, int signal);
	
};

#endif
